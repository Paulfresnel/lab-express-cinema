<h2>Movies Route</h2>
<p>Click on a movie to check the showtimes!</p>

<div id="movies-container">
    {{#each moviesArray}}
    <div class="movie-card">
        <img src="{{this.image}}">
        <h2>{{this.title}}</h2>
        <a class="buttonized"href="/movie/{{this._id}}">See More</a>
    </div>
    {{/each}}

</div>